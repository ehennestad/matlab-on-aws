                "Ref": "AWS::NoValue"
              }
            ]
          }
        ],
        "SubnetId": {
          "Ref": "Subnet"
        },
        "IamInstanceProfile": {
          "Fn::If": [
            "UsePredefinedRole",
            {
              "Ref": "MATLABInstanceProfile"
            },
            {
              "Fn::If": [
                "UseCustomIamRole",
                {
                  "Ref": "MATLABInstanceProfileCustom"
                },
                {
                  "Ref": "AWS::NoValue"
                }
              ]
            }
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "EbsOptimized": "true",
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": {
                "Ref": "RootVolumeSize"
              }
            }
          }
        ],
